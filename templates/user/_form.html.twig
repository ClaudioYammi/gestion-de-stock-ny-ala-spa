{{ form_start(form) }}
<div class="row m-4">
    <div class="row">
        <div class="col">
            {{ form_row(form.email) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="col">
            {{ form_row(form.password) }}
            {{ form_errors(form.password) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.roles) }}
            {{ form_errors(form.roles) }}
        </div>
    </div>
    
    <div class="row">
        <div class="col">
            <button class="btn btn-success btn-sm">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
</div>
{{ form_end(form) }}
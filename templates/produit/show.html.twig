{% extends 'base.html.twig' %}

{% block title %}Information sur le Produit{% endblock %}

{% block widget_droite %}
   
{% endblock %}

{% block body %}
    <table class="table table-striped ">
    <tbody>
        <tr>
            <th style="width: 30%;">Designation</th>
            <td>{{ produit.designation }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ produit.description }}</td>
        </tr>
        <tr>
            <th>Categorie</th>
            <td>{{ produit.idCategorie.nom }}</td>
        </tr>
        <tr>
            <th>Prix unitaire initial</th>
            <td>{{ produit.prixunitaire }} Ariary</td>
        </tr>
        <tr>
            <th>Prix de vente</th>
            <td>{{ produit.prixunitairevente }} Ariary</td>
        </tr>
        <tr>
            <th>Date d'expiration</th>
            <td>{{ produit.dateexp ? produit.dateexp|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Capacit√©</th>
            <td>{{ produit.capaciter }} {{ produit.unite }}</td>
        </tr>
        <tr>
            <th>Emplacement</th>
            <td>{{ produit.emplacement.nom }}</td>
        </tr>
    </tbody>
</table>
<div class="row">
    <div class="col">
        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-success btn-sm">
            Modifier
        </a>
        <a href="{{ path('app_produit_index') }}" class="btn btn-dark btn-sm">
            <i class="fas fa-arrow-left mr-1"></i> Retour
        </a>
    </div>
</div>
{% endblock %}

{% block widget %}
<div class="row">
    <div class="col">
    </div>
    <div class="col">
        {{ include('produit/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}